<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_common_loading_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/common_loading_dialog_padding">

    <ProgressBar
        android:layout_width="@dimen/common_loading_dialog_pv_size"
        android:layout_height="@dimen/common_loading_dialog_pv_size"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/bg_ios_loading_dialog" />

    <include layout="@layout/common_loading_dialog_message" />
</LinearLayout>