    android:layout_height="wrap_content"
    android:background="@drawable/bg_common_toast"
    android:gravity="center"
    android:paddingLeft="@dimen/common_toast_left_right"
    android:paddingTop="@dimen/common_toast_top_bottom"
    android:paddingRight="@dimen/common_toast_left_right"
    android:paddingBottom="@dimen/common_toast_top_bottom">

    <TextView
        android:id="@+id/mToastTextView"
