<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_common_loading_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/common_loading_dialog_padding">

    <com.gallopmark.commom.widget.CircularProgressView
        android:layout_width="@dimen/common_loading_dialog_pv_size"
        android:layout_height="@dimen/common_loading_dialog_pv_size"
        app:cpv_animSteps="4"
        app:cpv_color="@color/common_loading_dialog_pv_color"
        app:cpv_indeterminate="true"
        app:cpv_thickness="@dimen/common_loading_dialog_pv_thickness" />

    <include layout="@layout/common_loading_dialog_message" />
</LinearLayout>